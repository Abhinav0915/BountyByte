      </nav>
     
    <form class="form-range" action="/postQuestion" method="post">
        <div class="card">
            <div class="card-header text-center">
              Post Your Question
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="questionField">Question</label>
                    <input type="text" id="questionField" placeholder="Enter your Question" class="form-control my-1">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mt-2">
                            <label for="preferredLanguage">Preferred Language</label>
                            <input type="text" id="preferredLanguage" placeholder="Enter Coding" class="form-control my-1">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="class-group mt-2">
                            <label for="bountyField">Set Bounty</label>
                            <div class="input-group my-1">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mx-2">&#8377;</span>
                                </div>
                                <input type="number" id="bountyField" placeholder="Enter your Bounty" class="form-control">
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="class-group mt-2">
                            <label for="timeField">Deadline</label>
                            <input type="datetime-local" id="timeField" placeholder="Enter Deadline" class="form-control my-1">
                        </div>
                    </div>
                </div>
                  <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mt-2">
                            <label for="codeImageField">Upload Image(If Any)</label>
                            <input type="file" id="codeImageField" class="form-control my-1">
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-success mt-3" style="width: 100%;">
            </div>
          </div>
    </form>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
