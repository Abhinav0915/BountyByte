    <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&family=EB+Garamond:wght@500&family=Orbitron:wght@700&display=swap" rel="stylesheet"> 
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="css/problems.css">
    <title>All Problems</title>
</head>
<body>
   
  <nav class="navbar" style="padding-left: 5%; padding-right: 5%;">
    <div class="container-fluid">
      <a class="navbar-brand"><img src="icon2.png" alt=""><span style="color: white; font-family: Black Ops One; letter-spacing: 3px;" class="p-2">BountyByte</span></a>
      <ul class="nav nav-underline">
        <li class="nav-item">
          <a class="nav-link" href="/homepage" style="color: white; font-family: Black Ops One; ">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/problems" style="color: white; font-family: Black Ops One" >Problems</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/postQuestion" style="color: white; font-family: Black Ops One">Post Questions</a>
        </li>
        
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false" style="color: white; font-family: Black Ops One">Profile</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Your Posts</a></li>
            <li><a class="dropdown-item" href="/settings">Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/logout">Log Out</a></li>
          </ul>
        </li>
        
      </ul>
      </form>
    </div>
  </nav>


  <!-- Loop through the questions and create separate card containers -->
  <% for (var i = 0; i < questions.length; i++) { %>
    <div class="card mb-5 mt-5" style="width: 50rem; margin: auto;">
      <div class="card-body">
        <p class="cardText"><%= questions[i].questionField %></p>
        <div class="mb-3">
          <div class="uploadedImage">
            <% if (questions[i].codeImageField) { %>
              <img src="./uploads/<%= questions[i].codeImageField %>" alt="" style="max-width: 100%; max-height: 300px; object-fit: contain;">
            <% } else { %>
              <img src="/public/assets/noimg.png" alt="" style="max-width: 100%; max-height: 300px; object-fit: contain;">
            <% } %>
          </div>
        </div>
        <span class="cardText"><%= questions[i].descriptionField %></span>
        <div class="questionDeadline">
          <p class="mt-3" style="display: flex; justify-content: space-between;">
            Bounty: <span class="bountyPrice">â‚¹<%= questions[i].bountyField %></span>
          </p>
          <p class="mt-3" style="display: flex; justify-content: space-between;">
            Deadline: <span class="timeLeft"> &nbsp;<%= new Date(questions[i].timeField).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            }) %></span> 
          </p>
        </div>
        <div class="languageTags">
          <span style="font-style: italic;">Preferred Languages: </span> <%= questions[i].preferredLanguage %>
        </div> 
        <div class="cardFooter">
          <div class="row mt-3">
            <div class="col-6">
              <form action="/submitSolution" method="GET">
              <input type="hidden" name="questionId" value="<%= questions[i].id %>">
              <button type="submit" class="btn btn-primary" style="width: 100%;">Submit Solution</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  

</body> 
</html>
