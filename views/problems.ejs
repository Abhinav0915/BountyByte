      <h5 class="card-title"><%= questions[i].questionField %></h5>
      <p class="card-text"><%= questions[i].bountyField %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= questions[i].preferredLanguage %></li>
      <li class="list-group-item"><%= questions[i].timeField %></li>
      
